{
  "name": "workout-tracker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build:frontend && wrangler dev",
    "build:frontend": "vite build",
    "deploy": "npm run build:frontend && wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:init": "wrangler d1 execute workout-db --local --file=./src/db/schema.sql",
    "db:init:remote": "wrangler d1 execute workout-db --remote --file=./src/db/schema.sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@playwright/test": "^1.49.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.99.0"
  }
}
